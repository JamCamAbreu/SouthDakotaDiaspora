<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - South Dakota Diaspora</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (!Site.Helpers.GlobalMethods.IsLoggedIn(this.Session))
                {
                    <div>
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Create Account", "Create", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Log In", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                }
                else
                {
                    <div>
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink(Session["Username"].ToString(), "Details", "Users", new { area = "", id = Session["UserID"].ToString() }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Log Out", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Timeline")
                    {
                        <li style="width: 26px"><a href="@Url.Action("create")"><span class="plusbutton" /></a></li>
                    }
                    <li>@Html.ActionLink("Timeline ⌚", "Index", "Timeline")</li>

                    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Users")
                    {
                        <li style="width: 26px"><a href="@Url.Action("create")"><span class="plusbutton" /></a></li>
                    }
                    <li>@Html.ActionLink("Users 🧙‍", "Index", "Users")</li>

                    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Games")
                    {
                        <li style="width: 26px"><a href="@Url.Action("create")"><span class="plusbutton" /></a></li>
                    }
                    <li>@Html.ActionLink("Games 🎲", "Index", "Games")</li>
                    <li>@Html.ActionLink("Shows/Videos 📺", "Index", "Shows")</li>
                    <li>@Html.ActionLink("Books/Articles 📚", "Index", "Books")</li>
                    <li>@Html.ActionLink("Projects 🧪", "Index", "Projects")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        @while (Site.Helpers.GlobalMethods.NumberConfirmationMessages(this.Session) > 0)
        {
            string message = Site.Helpers.GlobalMethods.DequeueConfirmationMessage(this.Session);
            <div class = "confirmation-messages">@message</div>
        }
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
